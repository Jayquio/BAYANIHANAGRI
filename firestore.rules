
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // /users/{userId}
    // Users can read and write to their own user document.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // /farmRecords/{farmRecordId}
    // Users can create, read, update, and delete their own farm records.
    match /farmRecords/{farmRecordId} {
       allow read, delete: if isSignedIn() && resource.data.farmerId == request.auth.uid;
       allow create: if isSignedIn() && request.resource.data.farmerId == request.auth.uid;
       allow update: if isSignedIn() && resource.data.farmerId == request.auth.uid && request.resource.data.farmerId == resource.data.farmerId;
       
       // Users can only list their own records.
       allow list: if isSignedIn();
    }
  }
}
